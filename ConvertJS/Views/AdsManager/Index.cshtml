    <div id="kt_app_content_container" class="app-container">
        <!--begin::Card-->
        <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5"><span class="path1"></span><span class="path2"></span></i>
                        <input type="text" data-kt-campaign-table-filter="search" class="form-control form-control-solid w-250px ps-13" placeholder="Search Campaigns">
                    </div>
                    <!--end::Search-->
                </div>
                <!--end::Card title-->
                <!--begin::Card toolbar-->
                <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                    <!--begin::Toolbar-->
                    <div class="w-100 mw-150px">
                        <!--begin::Select2-->
                        <select class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select Status" data-kt-campaign-table-filter="status">
                            <option></option>
                            <option value="all">All</option>
                            <option value="active">Active</option>
                            <option value="disable">Disable</option>
                        </select>
                        <!--end::Select2-->
                    </div>
                    <!--end::Toolbar-->
                </div>
                <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body py-4">
                <!--begin::Table-->
                <div id="kt_table_users_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="table-responsive">
                        <table class="table align-middle table-row-dashed fs-9 gy-5 dataTable no-footer" id="table_campaigns">
                            <thead>
                                <tr class="text-start text-muted fw-bold fs-9 text-uppercase gs-0">
                                    <th>Select</th>
                                    <th>On/Off</th>
                                    <th>Campaign Name</th>
                                    <th>Delivery</th>
                                    <th>Currency</th>
                                    <th>Bid Strategy</th>
                                    <th>Budget</th>
                                    <th>Last significant edit</th>
                                    <th>Results</th>
                                    <th>Reach</th>
                                    <th>Frequency</th>
                                    <th>Impressions</th>
                                    <th>Amount spent</th>
                                    <th>Clicks</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody class="text-gray-600 fw-semibold">
                            @foreach (var ad in Ads)
                            {
                                <tr class="odd">
                                    <td>
                                        <div class="form-check form-check-custom form-check-solid form-check-sm">
                                            <input class="form-check-input" type="checkbox" value="" id="flexRadioLg" />
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check form-switch form-check-custom form-check-success form-check-solid fs-5">
                                            <input class="form-check-input " type="checkbox" value="" checked id="kt_flexSwitchCustomDefault_1_1" />
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold"> @ad.Name</span>
                                    </td>
                                    <td>
                                        @switch (ad.Status)
                                        {
                                            case AdsStatus.Active:
                                                <span class="badge badge-light-success" data-order="active"> Active </span>
                                                break;
                                            case AdsStatus.Disable:
                                                <span class="badge badge-light-danger" data-order="disable"> Disable </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <span class="badge badge-light-danger"> @ad.Currency </span>
                                    </td>
                                    <td>
                                        <span class="fw-bold"> @ad.BidStrategy </span>
                                    </td>
                                    <td>
                                        <span class="fw-bold"> @ad.Budget </span>
                                    </td>
                                    <td>
                                        <span class="fw-bold"> @ad.LastSignificantEdut </span>
                                    </td>
                                    <td>
                                        <span class="badge badge-light-danger"> @ad.Result </span>
                                    </td>
                                    <td>
                                        <span class="badge badge-light-success"> @ad.Reach</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-light-success"> @ad.Frequency</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold"> @ad.Impressions</span>
                                    </td>
                                    <td class="text-warning">@ad.AmountSpent</td>
                                    <td>
                                        <span class="text-primary fw-bold">@ad.Clicks</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-light-success"> @ad.Value</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!--end::Table-->
        </div>
        <!--end::Card body-->
